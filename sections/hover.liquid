<script>

    /* PRIX & VARIANTES */

    function selectPricing(card, variant) {
        // Reset sélection
        document.querySelectorAll('.pricing-card').forEach(c => {
            c.classList.remove('selected');
            c.setAttribute('aria-pressed', 'false');
        });

        // Sélection courante
        card.classList.add('selected');
        card.setAttribute('aria-pressed', 'true');

        // MAJ variante + prix
        updateVariant(variant);
        updateProductPrice(variant);
        updateBuyButtonPrice(variant);
    }

    function updateVariant(variant) {
        const variantInput = document.querySelector('input[name="id"]');
        if (!variantInput) return;

        const variantIds = {
            '1-month': '{{ variant_1_month.id }}',
            '2-month': '{{ variant_2_month.id }}'
        };
        variantInput.value = variantIds[variant];
    }

    function updateProductPrice(variant) {
        const el = document.querySelector('.product-price');
        if (!el) return;

        const prices = {
            '1-month': '{{ variant_1_month.price | money }}',
            '2-month': '{{ variant_2_month.price | money }}'
        };
        el.textContent = prices[variant];
    }

    function updateBuyButtonPrice(variant) {
        const el = document.querySelector('.buy-button .button-price');
        if (!el) return;

        const prices = {
            '1-month': '{{ variant_1_month.price | money }}',
            '2-month': '{{ variant_2_month.price | money }}'
        };
        el.textContent = prices[variant];
    }

    /* ACCORDION */
    function toggleAccordion(header) {
        const item = header.parentElement;
        const isActive = item.classList.contains('active');
        const isMobile = window.innerWidth <= 768;


        document.querySelectorAll('.accordion-item').forEach(other => {
            if (other !== item) {
                other.classList.remove('active');
                const h = other.querySelector('.accordion-header');
                if (h) h.setAttribute('aria-expanded', 'false');
            }
        });


        const willBeActive = !isActive;
        item.classList.toggle('active', willBeActive);
        header.setAttribute('aria-expanded', String(willBeActive));


        if (willBeActive && isMobile) {

            setTimeout(() => {
                const content = item.querySelector('.accordion-content');
                if (content) {
                    // Scroll vers le début du contenu avec un petit offset
                    const headerHeight = header.offsetHeight;
                    const targetPosition = header.offsetTop - 20; // 20px de marge

                    window.scrollTo({
                        top: targetPosition,
                        behavior: 'smooth'
                    });
                }
            }, 250);
        }
    }
</script>


